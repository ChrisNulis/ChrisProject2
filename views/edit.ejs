  <body>
    <div class = "container-fluid">
    <nav>
      <%- include ('./partials/nav.ejs') %>
    </nav>
    <h1>Edit POP!</h1>
    <form action="/collections/<%=items.id%>?_method=PUT" method="POST">

      Name: <input type="text" name="name" value="<%=items.name%>"/><br/>
      Description: <input type="text" name="description" value="<%=items.description%>"/><br/>
      Image:<input type="text" name="img" value="<%=items.img%>"/><br/>
      Quantity:<input type="text" name="qty" value="<%=items.qty%>"/><br/>
      Owned: <input type="checkbox" name="owned" <% if(items.owned === true){ %>
        checked
      <%}%>
      /><br/>

      <input type="submit" value="Edit POP"/>
    </form>
